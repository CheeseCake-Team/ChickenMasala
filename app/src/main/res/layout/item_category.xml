<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_large_150"
    android:layout_marginHorizontal="@dimen/margin_medium_16"
    android:layout_marginVertical="@dimen/margin_small_8"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="@dimen/margin_medium_16">


    <androidx.cardview.widget.CardView
        android:id="@+id/image_view_card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/margin_small_8"
        app:cardCornerRadius="@dimen/margin_medium_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="@drawable/gradient">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/card_img_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_medium_16"
        app:layout_constraintBottom_toBottomOf="@id/card_view_card_item"
        app:layout_constraintEnd_toEndOf="@id/card_view_card_item"
        app:layout_constraintStart_toStartOf="@id/card_view_card_item"
        app:layout_constraintTop_toTopOf="@id/card_view_card_item"
        tools:text="name of category" />

</androidx.constraintlayout.widget.ConstraintLayout>

