<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_crad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_advice"
        android:background="@drawable/src_rounded_rectangle"
        android:layout_width="323dp"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_device_card"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:background="@drawable/gradient"
            app:layout_constraintEnd_toEndOf="@+id/card_advice"
            app:layout_constraintStart_toStartOf="@+id/card_advice"
            app:layout_constraintTop_toTopOf="@+id/card_advice">


        <ImageView
                android:id="@+id/first_img_advice"
                android:layout_width="323dp"
                android:layout_height="170dp"
                android:layout_margin="16dp"
                android:src="@drawable/recycler_img1"
                android:foreground="@drawable/gradient"
                app:layout_constraintEnd_toEndOf="cons_device_card"
                app:layout_constraintStart_toStartOf="cons_device_card"
                app:layout_constraintTop_toTopOf="cons_device_card" />

    <TextView
        android:id="@+id/title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/_8ssp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/limit_added_sugars"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/first_img_advice"
        app:layout_constraintTop_toTopOf="@+id/first_img_advice" />

    <TextView
        android:id="@+id/ditels_card"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/advice_txt"
        android:textColor="#ffffff"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/title_card"
        app:layout_constraintTop_toBottomOf="@+id/title_card" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>