<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/silde_show_home_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium_16">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/text_view_slide_show_image"
        android:layout_width="@dimen/margin_image_home_width"
        android:layout_height="@dimen/margin_image_home_height"
        android:layout_margin="@dimen/margin_medium_16"
        android:scaleType="centerCrop"
        android:src="@drawable/recycler_img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="0.2" />

    <TextView
        android:id="@+id/text_view_slide_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_16"
        android:layout_marginTop="@dimen/margin_large_72"
        android:gravity="center_vertical"
        android:text="Limit Added Sugars"
        app:layout_constraintStart_toStartOf="@id/text_view_slide_show_image"
        app:layout_constraintTop_toTopOf="@id/text_view_slide_show_image" />

    <TextView
        android:id="@+id/text_view_card_detials"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:layout_width="@dimen/margin_large_256"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_16"
        android:layout_marginTop="@dimen/margin_small_8"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="@string/details_card"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/text_view_slide_show_image"
        app:layout_constraintTop_toBottomOf="@+id/text_view_slide_show_title" />
</androidx.constraintlayout.widget.ConstraintLayout>