<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">



    <HorizontalScrollView
        android:id="@+id/horizontal_view_fastest_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/liner_horizantal_fastest_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/first_card__fastest_recipes"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                style="@drawable/src_rounded_rectangle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_first_fastest_recipes_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    app:layout_constraintTop_toTopOf="@+id/first_card__fastest_recipes"
                    app:layout_constraintEnd_toEndOf="@+id/first_card__fastest_recipes"
                    app:layout_constraintStart_toStartOf="@+id/first_card__fastest_recipes">

                    <ImageView
                        android:id="@+id/img_first_card_fastest_recipes"
                        android:layout_width="160dp"
                        android:layout_height="108dp"
                        android:src="@drawable/chicken_legs"
                        app:layout_constraintTop_toTopOf="@+id/cons_first_fastest_recipes_card"
                        app:layout_constraintEnd_toEndOf="@+id/cons_first_fastest_recipes_card"
                        app:layout_constraintStart_toStartOf="@+id/cons_first_fastest_recipes_card" />

                    <TextView
                        android:id="@+id/txt_title_first_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chicken_legs"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#db000000"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_first_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@+id/img_first_card_fastest_recipes"
                        app:layout_constraintStart_toStartOf="@+id/img_first_card_fastest_recipes"/>

                    <TextView
                        android:id="@+id/txt_name_city_first_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/north_india"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#5c000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_first_card"
                        app:layout_constraintStart_toStartOf="@+id/txt_title_first_card"/>

                    <TextView
                        android:id="@+id/txt_time_first_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginEnd="8dp"
                        android:text="@string/_5m"
                        android:textColor="#5c000000"
                        app:layout_constraintStart_toEndtOf="@+id/icon_timer_first_card_fastest_recipes"
                        app:layout_constraintBottom_toBottomOf="@id/icon_timer_first_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@id/cons_first_fastest_recipes_card"
                        />

                    <ImageView
                        android:id="@+id/icon_timer_first_card_fastest_recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/txt_time_first_card"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_name_city_first_card" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/secend_card__fastest_recipes"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                style="@drawable/src_rounded_rectangle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_secend_fastest_recipes_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    app:layout_constraintTop_toTopOf="@+id/secend_card__fastest_recipes"
                    app:layout_constraintEnd_toEndOf="@+id/secend_card__fastest_recipes"
                    app:layout_constraintStart_toStartOf="@+id/secend_card__fastest_recipes">

                    <ImageView
                        android:id="@+id/img_secend_card_fastest_recipes"
                        android:layout_width="160dp"
                        android:layout_height="108dp"
                        android:src="@drawable/chicken_legs"
                        app:layout_constraintTop_toTopOf="@+id/cons_secend_fastest_recipes_card"
                        app:layout_constraintEnd_toEndOf="@+id/cons_secend_fastest_recipes_card"
                        app:layout_constraintStart_toStartOf="@+id/cons_secend_fastest_recipes_card" />

                    <TextView
                        android:id="@+id/txt_title_secend_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chicken_legs"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#db000000"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_secend_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@+id/img_secend_card_fastest_recipes"
                        app:layout_constraintStart_toStartOf="@+id/img_secend_card_fastest_recipes"/>

                    <TextView
                        android:id="@+id/txt_name_city_secend_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/north_india"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#5c000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_secend_card"
                        app:layout_constraintStart_toStartOf="@+id/txt_title_secend_card"/>

                    <TextView
                        android:id="@+id/txt_time_secend_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginEnd="8dp"
                        android:text="@string/_5m"
                        android:textColor="#5c000000"
                        app:layout_constraintStart_toEndtOf="@+id/icon_timer_secend_card_fastest_recipes"
                        app:layout_constraintBottom_toBottomOf="@id/icon_timer_secend_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@id/cons_secend_fastest_recipes_card"
                        />

                    <ImageView
                        android:id="@+id/icon_timer_secend_card_fastest_recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/txt_time_secend_card"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_name_city_secend_card" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/third_card__fastest_recipes"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                style="@drawable/src_rounded_rectangle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_third_fastest_recipes_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    app:layout_constraintTop_toTopOf="@+id/third_card__fastest_recipes"
                    app:layout_constraintEnd_toEndOf="@+id/third_card__fastest_recipes"
                    app:layout_constraintStart_toStartOf="@+id/third_card__fastest_recipes">

                    <ImageView
                        android:id="@+id/img_third_card_fastest_recipes"
                        android:layout_width="160dp"
                        android:layout_height="108dp"
                        android:src="@drawable/chicken_legs"
                        app:layout_constraintTop_toTopOf="@+id/cons_third_fastest_recipes_card"
                        app:layout_constraintEnd_toEndOf="@+id/cons_third_fastest_recipes_card"
                        app:layout_constraintStart_toStartOf="@+id/cons_third_fastest_recipes_card" />

                    <TextView
                        android:id="@+id/txt_title_third_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chicken_legs"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#db000000"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_third_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@+id/img_third_card_fastest_recipes"
                        app:layout_constraintStart_toStartOf="@+id/img_third_card_fastest_recipes"/>

                    <TextView
                        android:id="@+id/txt_name_city_third_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/north_india"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#5c000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_third_card"
                        app:layout_constraintStart_toStartOf="@+id/txt_title_third_card"/>

                    <TextView
                        android:id="@+id/txt_time_third_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginEnd="8dp"
                        android:text="@string/_5m"
                        android:textColor="#5c000000"
                        app:layout_constraintStart_toEndtOf="@+id/icon_timer_third_card_fastest_recipes"
                        app:layout_constraintBottom_toBottomOf="@id/icon_timer_third_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@id/cons_third_fastest_recipes_card"
                        />

                    <ImageView
                        android:id="@+id/icon_timer_third_card_fastest_recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/txt_time_third_card"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_name_city_third_card" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/four_card__fastest_recipes"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                style="@drawable/src_rounded_rectangle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_four_fastest_recipes_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    app:layout_constraintTop_toTopOf="@+id/four_card__fastest_recipes"
                    app:layout_constraintEnd_toEndOf="@+id/four_card__fastest_recipes"
                    app:layout_constraintStart_toStartOf="@+id/four_card__fastest_recipes">

                    <ImageView
                        android:id="@+id/img_four_card_fastest_recipes"
                        android:layout_width="160dp"
                        android:layout_height="108dp"
                        android:src="@drawable/chicken_legs"
                        app:layout_constraintTop_toTopOf="@+id/cons_four_fastest_recipes_card"
                        app:layout_constraintEnd_toEndOf="@+id/cons_four_fastest_recipes_card"
                        app:layout_constraintStart_toStartOf="@+id/cons_four_fastest_recipes_card" />

                    <TextView
                        android:id="@+id/txt_title_four_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chicken_legs"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#db000000"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_four_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@+id/img_four_card_fastest_recipes"
                        app:layout_constraintStart_toStartOf="@+id/img_four_card_fastest_recipes"/>

                    <TextView
                        android:id="@+id/txt_name_city_four_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/north_india"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#5c000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_four_card"
                        app:layout_constraintStart_toStartOf="@+id/txt_title_four_card"/>

                    <TextView
                        android:id="@+id/txt_time_four_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginEnd="8dp"
                        android:text="@string/_5m"
                        android:textColor="#5c000000"
                        app:layout_constraintStart_toEndtOf="@+id/icon_timer_four_card_fastest_recipes"
                        app:layout_constraintBottom_toBottomOf="@id/icon_timer_four_card_fastest_recipes"
                        app:layout_constraintEnd_toEndOf="@id/cons_four_fastest_recipes_card"
                        />

                    <ImageView
                        android:id="@+id/icon_timer_four_card_fastest_recipes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/txt_time_four_card"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_name_city_four_card" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </HorizontalScrollView>
</LinearLayout>