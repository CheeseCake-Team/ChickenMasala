<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:paddingVertical="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            app:shapeAppearanceOverlay="@style/HistoryImageStyle"
            android:layout_height="@dimen/_122sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spices_and_herbs_first_image" />

        <TextView
            android:id="@+id/text_details"
            style="@style/BodyMediumTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:justificationMode="inter_word"
            android:text="@string/food"
            app:layout_constraintEnd_toEndOf="@+id/main_image"
            app:layout_constraintStart_toStartOf="@+id/main_image"
            app:layout_constraintTop_toBottomOf="@+id/main_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/author_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_99sdp"
            app:shapeAppearanceOverlay="@style/HistoryImageStyle"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/text_details"
            app:layout_constraintStart_toStartOf="@+id/text_details"
            app:layout_constraintTop_toBottomOf="@+id/text_details"
            app:srcCompat="@drawable/spices_and_herbs_second_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/related_spice_image2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_145sdp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/HistoryImageStyle"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@+id/related_spice_image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/related_spice_image1"
            app:layout_constraintTop_toTopOf="@+id/related_spice_image1"
            app:srcCompat="@drawable/spices_and_herbs_third_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/related_spice_image1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_145sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/HistoryImageStyle"
            app:layout_constraintEnd_toStartOf="@+id/related_spice_image2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author_image"
            app:srcCompat="@drawable/food_image_eleven" />

        <TextView
            android:id="@+id/text_related_spices"
            style="@style/BodyMediumTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:justificationMode="inter_word"
            android:text="@string/history_second_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/related_spice_image1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>