<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_title"
            style="@style/TextAppearance.Material3.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_16sdp"
            android:text="@string/history_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_112sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:srcCompat="@drawable/spice_" />

        <TextView
            android:id="@+id/text_details"
            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/indian_food"
            app:layout_constraintEnd_toEndOf="@+id/main_image"
            app:layout_constraintStart_toStartOf="@+id/main_image"
            app:layout_constraintTop_toBottomOf="@+id/main_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/author_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_99sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="@+id/text_details"
            app:layout_constraintStart_toStartOf="@+id/text_details"
            app:layout_constraintTop_toBottomOf="@+id/text_details"
            app:srcCompat="@drawable/shantanu" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/related_spice_image1"
            android:layout_width="@dimen/_136sdp"
            android:layout_height="@dimen/_145sdp"
            app:layout_constraintBottom_toTopOf="@+id/text_related_spices"
            app:layout_constraintStart_toStartOf="@+id/author_image"
            app:layout_constraintTop_toBottomOf="@+id/author_image"
            app:srcCompat="@drawable/more_spice1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/related_spice_image2"
            android:layout_width="@dimen/_136sdp"
            android:layout_height="@dimen/_145sdp"
            app:layout_constraintBottom_toTopOf="@+id/text_related_spices"
            app:layout_constraintEnd_toEndOf="@+id/author_image"
            app:layout_constraintTop_toBottomOf="@+id/author_image"
            app:srcCompat="@drawable/more_spice1" />

        <TextView
            android:id="@+id/text_related_spices"
            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/more_food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/related_spice_image2"
            app:layout_constraintStart_toStartOf="@+id/related_spice_image1"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>