<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/history_img5"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginEnd="@dimen/margin16"
            android:background="@drawable/history_img3"
            android:layout_marginTop="@dimen/margin8"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toEndOf="@+id/history_img4"
            app:layout_constraintTop_toBottomOf="@+id/history_img3"
            app:roundPercent="0.3" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/history_img4"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin8"
            android:scaleType="centerCrop"
            android:src="@drawable/history_img2"
            app:layout_constraintEnd_toStartOf="@+id/history_img5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/history_img5"
            app:roundPercent="0.3" />

        <TextView
            android:id="@+id/text_app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:text="@string/history_of_indian_cuisine"
            android:textColor="@color/titel_back"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/detils_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin16"
            android:maxLines="10"
            android:text="@string/food"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/img_history1"
            app:layout_constraintTop_toBottomOf="@+id/img_history1" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/img_history1"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin16"
            android:scaleType="centerCrop"
            android:src="@drawable/history_img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_app_bar"
            app:roundPercent="0.3" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/history_img2"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin8"
            android:scaleType="centerCrop"
            android:src="@drawable/history_img2"
            app:layout_constraintEnd_toStartOf="@+id/history_img3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/history_img3"
            app:roundPercent="0.3" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/history_img3"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin16"
            android:background="@drawable/history_img3"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/history_img2"
            app:layout_constraintTop_toBottomOf="@+id/detils_text"
            app:roundPercent="0.3" />

        <TextView
            android:id="@+id/text_app_bar3"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:maxLines="11"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin16"
            android:text="@string/food"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/history_img5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>