<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/horizontal_linear_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_secondary"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/recipe_image"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fasted_card" />

        <TextView
            android:id="@+id/recipe_name"
            style="@style/margin_activity.title_style"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Classic Greek Salad"
            android:textColor="@color/color_black_86" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                android:id="@+id/cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northern India"
                android:textSize="@dimen/font_size_hint" />

            <View

                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="4dp"
                android:background="@drawable/clock_icon" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>