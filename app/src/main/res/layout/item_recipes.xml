<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Outlined"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin_small_8"
    app:cardCornerRadius="@dimen/margin_medium_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_small_card_recipe"
            android:layout_width="@dimen/margin_image_width"
            android:layout_height="@dimen/margin_image_height"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/food_image_four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/HistoryImageStyle" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small_8"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/classic_greek_salad"
            app:layout_constraintEnd_toEndOf="@id/image_small_card_recipe"
            app:layout_constraintStart_toStartOf="@id/image_small_card_recipe"
            app:layout_constraintTop_toBottomOf="@id/image_small_card_recipe" />

        <TextView
            android:id="@+id/cuisine"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_8"
            android:fontFamily="@font/roboto_light"
            android:text="@string/northern_india"
            app:layout_constraintStart_toStartOf="@id/recipe_name"
            app:layout_constraintTop_toBottomOf="@id/recipe_name" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="@string/_10_m"
            app:drawableStartCompat="@drawable/outline_timer_24"
            app:layout_constraintBottom_toBottomOf="@id/cuisine"
            app:layout_constraintEnd_toEndOf="@id/image_small_card_recipe"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/cuisine"
            app:layout_constraintTop_toTopOf="@id/cuisine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>